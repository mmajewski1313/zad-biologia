{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Viruses list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Size</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('admin_viruses_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>
                        <a href="{{ path('admin_viruses_show', { 'id': entity.id }) }}">
                            {{ entity.name }}
                        </a>
                    </td>
                    <td>{{ entity.size }}</td>

                </tr>
            {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_viruses_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}
